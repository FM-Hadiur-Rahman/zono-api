# ───── SERVER ─────
# Local dev DB (example). In production, set DATABASE_URL in Render to their managed Postgres URL (with sslmode=require).
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/zono?schema=public

# Secret used to sign JWTs — change in every environment.
JWT_SECRET=change_me_in_prod

# In code, prefer: const PORT = process.env.PORT || 4000
# On Render, DO NOT set PORT yourself; Render injects it.
PORT=4000
NODE_ENV=development

# ───── FRONTEND / CORS ─────
# Your frontend origin (dev). In prod set to your real domain (e.g., https://zono-web.vercel.app)
APP_ORIGIN=http://localhost:5173
# Comma-separated for multiple origins
CORS_ORIGINS=http://localhost:5173

# ───── EMAIL ─────
# Toggle email sending (true/false). Keep false if you don’t want emails in dev.
EMAIL_ENABLED=true
EMAIL_FROM=Zono <no-reply@zono.app>

# --- Option A: SMTP (for local dev). Gmail requires 2FA + App Password.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_gmail_address@example.com
EMAIL_PASS=your_app_password

# --- Option B: HTTP provider (recommended for production on Render)
# If you use this, your mailer picks Resend in production and avoids SMTP port blocks.
RESEND_API_KEY=your_resend_api_key

# ───── APP FLAGS ─────
ALLOW_OWNER_SELF_SIGNUP=true
