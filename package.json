{
  "name": "zono-api",
  "version": "0.1.0",
  "type": "module",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "dev": "NODE_ENV=development node --watch src/server.js",
    "dev:api": "dotenv -e .env.development -- node --watch src/server.js",
    "start": "NODE_ENV=production node src/server.js",
    "start:staging": "NODE_ENV=staging node src/server.js",
    "seed:dev": "dotenv -e .env.development -- node prisma/seed.js",
    "studio:dev": "dotenv -e .env.development -- npx prisma studio --schema prisma/schema",
    "check:dev": "dotenv -e .env.development -- node scripts/check-db.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "seed": "node prisma/seed.js",
    "husky:install": "husky install",
    "prepare": "if [ \"$CI\" != \"true\" ]; then npm run husky:install; else echo 'Skipping husky on CI'; fi"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.9",
    "pino": "^9.3.2",
    "socket.io": "^4.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "vitest": "^2.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,json,md}": "prettier --write",
    "*.{js,jsx}": "eslint --fix"
  },
  "prisma": {
    "schema": "prisma/schema"
  }
}
