model Notification {
  id        String   @id @default(cuid())
  tenantId  String
  userId    String
  type      String   // e.g. "shift.created"
  title     String
  body      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([tenantId, userId, isRead, createdAt])
}
